<div class="jumbotron text-center">
  <h2>Data Delivery</h2>
  <p>Data Delivery is a service of the <a target="_blank" rel="noopener" href="https://genome.duke.edu/cores/computing">Computational Solutions Shared Resources</a> at the <a target="_blank" rel="noopener" href="https://genome.duke.edu">Duke Center for Genomic and Computational Biology</a></p>

  {{#if isDevelopmentMode}}
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-left">
        {{#bs-form as |form|}}
          {{#form.group}}
            <label for="username">Username</label>
            {{input class="form-control" id="username" placeholder="Enter Username" value=username}}
          {{/form.group}}
          {{#form.group}}
            <label for="password">Password</label>
            {{input class="form-control" id="password" type="password" placeholder="Enter Password" value=password}}
          {{/form.group}}
          {{#if errorMessage}}
            {{#bs-alert type="danger" dismissible=false}}Unable to authenticate: {{errorMessage}}{{/bs-alert}}
          {{/if}}
          {{#bs-button type="default" onClick=(action "authenticate")}}Login{{/bs-button}}
        {{/bs-form}}
      </div>
    </div>
  {{else}}
    <p><a class="btn btn-primary btn-lg" href="{{ authorizeUrl }}?next=/get-token?afterLogin={{ afterLogin }}" role="button">LOG IN</a></p>
  {{/if}}
</div>
