<dl class="dl-horizontal">
  {{#row-label-value label="From"}}{{transfer.fromUser.fullName}}{{/row-label-value}}
  {{#row-label-value label="To"}}{{transfer.toUsersNames}}{{/row-label-value}}
  {{#unless brief}}
    {{#row-label-value label="Status"}}{{format-delivery-state transfer.status}}{{/row-label-value}}
    {{#if delivery.declineReason}}
      {{#row-label-value label="Decline Reason"}}{{delivery.declineReason}}{{/row-label-value}}
    {{/if}}
    {{#if delivery.performedBy}}
      {{#row-label-value label="Performed By"}}{{delivery.performedBy}}{{/row-label-value}}
    {{/if}}
    {{#row-label-value label="Delivery Email"}}
      {{textarea value=delivery.deliveryEmailText readonly=true rows="8" class="form-control"}}
    {{/row-label-value}}
{{/unless}}
</dl>
